---
---
{
    "posts": [
        {% assign first_post = site.posts|first %}
        {% for post in site.posts %}
            {
                "title": "{{ post.title }}",
                "tags": [
                    {% assign first_tag = post.tags|first %}
                    {% for tag in post.tags %}
                        {% if tag == first_tag %}
                            "{{ tag }}"
                        {% else %}
                            ,"{{ tag }}"
                        {% endif %}
                    {% endfor %}
                ],
                "href": "{{ post.url }}"
            }
            {% if first_post != post %}
                ,
            {% endif %}
        {% endfor %}
    ],
}
