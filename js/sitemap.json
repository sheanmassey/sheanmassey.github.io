---
---
{
    "posts": [
        {% for post in site.posts %}
            {
                "title": "{{ post.title }}",
                "tags": [
                    {% for tag in post.tags %}
                        {% assign first_tag = post.tags|first %}

                        {% if tag == first_tag %}
                            "{{ tag }}"
                        {% else %}
                            ,"{{ tag }}"
                        {% endif %}
                    {% endfor %}
                ],
                "href": "{{ post.url }}",
            },
        {% endfor %}
    ],
}
